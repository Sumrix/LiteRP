{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "LiteRP"
    }
  },
  "AllowedHosts": "*",
  "Avatar": {
    "BaseWidth": {
      "sm": 64,
      "md": 128,
      "lg": 256,
      "xl": 512
    },
    "AspectRatio": 0.66666667,
    "AllowedMultipliers": [ 1, 2, 3 ],
    "MaxAllowedUploadMegabytes": 10
  },
  "LocalizationSettings": {
    "DefaultCulture": "en-US",
    "SupportedCultures": [
      "en-US",
      "ru-RU"
    ]
  },
  "Ollama": {
    "ConnectionCheckIntervalSec": 10
  }  
}
