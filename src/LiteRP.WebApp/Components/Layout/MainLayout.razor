@inherits LayoutComponentBase
@inject IStringLocalizer<SharedResources> L

<div class="antialiased bg-gray-50 dark:bg-gray-900 h-dvh flex flex-col overflow-hidden">
    <Navbar Class="md:hidden">
        <div class="flex items-center gap-2">
            <LrpButton OnClick="@_sidenav.ToggleDrawerAsync"
                      aria-controls="@_sidenav.Id"
                      title="@L["Open sidebar"]"
                      Variant="LrpButtonStyle.Ghost"
                      Color="LrpButtonColor.Grey"
                      Icon="IconTypes.Sidenav"
                      Size="LrpButtonSize.Medium">
            </LrpButton>
            <NavbarBrand>
                <a href="/" class="flex items-center ps-2.5">
                    <img class="w-6 h-6 me-3 text-primary-500" src="img/logo.svg"/>
                    <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">LiteRP</span>
                </a>
            </NavbarBrand>
        </div>
    </Navbar>
    <SidenavLayout @ref="_sidenav"/>
    <main id="main-content" class="flex-1 min-h-0 overflow-y-auto py-4 md:px-2 md:ml-64" style="scrollbar-gutter: stable both-edges;">
        @Body
    </main>
</div>

<ToastHost />

<div id="blazor-error-ui" data-nosnippet>
    @L["An unhandled error has occurred."]
    <a href="." class="reload">@L["Reload"]</a>
    <span class="dismiss">ðŸ—™</span>
</div>

